<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Measure units" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Measure units</h1>
    <%= link_to "New measure unit", new_measure_unit_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="measure_units" class="min-w-full">
    <% @measure_units.each do |measure_unit| %>
      <%= render measure_unit %>
      <p>
        <%= link_to "Show this measure unit", measure_unit, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
