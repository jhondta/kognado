<div class="flex flex-col flex-start justify-start mx-auto md:h-screen dark:bg-gray-900">
  <div class="w-full p-6 space-y-2 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
    <%= render @country %>

    <%= link_to "Edit this country", edit_country_path(@country),
                class: "mt-2 py-3 px-5 text-base font-medium text-center text-white bg-blue-700
                        rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 sm:w-auto
                        dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    <%= link_to "Back to countries", countries_path,
                class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block md:ml-2">
      <%= button_to "Destroy this country", @country, method: :delete,
                    class: "mt-2 py-3 px-5 text-base font-medium text-center text-white bg-red-700
                            rounded-lg hover:bg-red-800 focus:ring-4 focus:ring-red-300 sm:w-auto
                            dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" %>
    </div>
  </div>
</div>