<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Frequencies" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Frequencies</h1>
    <%= link_to "New frequency", new_maintenance_frequency_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="maintenance_frequencies" class="min-w-full">
    <% @maintenance_frequencies.each do |maintenance_frequency| %>
      <%= render maintenance_frequency %>
      <p>
        <%= link_to "Show this frequency", maintenance_frequency, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
