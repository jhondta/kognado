<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Item categories" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Item categories</h1>
    <%= link_to "New item category", new_inventory_item_category_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="inventory_item_categories" class="min-w-full">
    <% @inventory_item_categories.each do |inventory_item_category| %>
      <%= render inventory_item_category %>
      <p>
        <%= link_to "Show this item category", inventory_item_category, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
