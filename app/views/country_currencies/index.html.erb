<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Country currencies" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Country currencies</h1>
    <%= link_to "New country currency", new_country_currency_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="country_currencies" class="min-w-full">
    <% @country_currencies.each do |country_currency| %>
      <%= render country_currency %>
      <p>
        <%= link_to "Show this country currency", country_currency, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
