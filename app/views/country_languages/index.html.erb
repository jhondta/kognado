<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Country languages" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Country languages</h1>
    <%= link_to "New country language", new_country_language_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="country_languages" class="min-w-full">
    <% @country_languages.each do |country_language| %>
      <%= render country_language %>
      <p>
        <%= link_to "Show this country language", country_language, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
